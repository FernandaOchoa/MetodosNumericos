<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
       <!-- <item name="android:statusBarColor">@android:color/transparent</item> -->
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <!-- Buttons style -->

    <style name="ButtonApp" parent="AppTheme">
        <!-- Color and Fonts -->

        <item name="android:background">@color/colorAccent</item>
        <item name="android:textSize">@dimen/large</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorT</item>
    </style>

    <style name="EditText" parent="AppTheme">
        <!-- Color and Fonts EditText -->
        <item name="textColorHint">@color/colorAccent</item>
        <item name="android:textSize">@dimen/large</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>
